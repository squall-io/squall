{
  "compilerOptions": {
    "lib": [
        "esnext"
    ],
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "importHelpers": true,
    "strict": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
  },
  "exclude": [
    "node_modules/",
  ],
}
