{
  "compilerOptions": {
    "lib": [
        "esnext"
    ],
    "target": "es2015",
    "module": "es2015",
    "declaration": true,
    "removeComments": true,
    "importHelpers": true,
    "strict": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
  },
  "exclude": [
    "node_modules/",
  ],
}
