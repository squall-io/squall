{
  "name": "@squall/core",
  "version": "0.0.1",
  "description": "Squall - The hybrid TypeScript, microservice optimized framework",
  "scripts": {
    "test": "yarn build:test && NODE_OPTIONS='-r source-map-support/register' yarn jasmine",
    "dev": "yarn nodemon --exec \"yarn test\"",
    "build": "yarn tsc --project src || exit 1",
    "build:test": "yarn tsc --project spec || exit 1",
    "build:docs": "echo \"not yet implemented\" && exit -1"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jasmine": "^3.3.5",
    "@types/lodash": "^4.14.119",
    "@types/node": "^12.12.8",
    "@types/uuid": "^3.4.4",
    "esm": "^3.2.5",
    "jasmine": "^3.3.1",
    "lodash": "^4.17.13",
    "nodemon": "^1.19.4",
    "source-map-support": "^0.5.10",
    "tslint": "^5.12.1",
    "typescript": "^3.7.2",
    "uuid": "^3.3.2"
  },
  "dependencies": {
    "tslib": "^1.9.3"
  },
  "nodemonConfig": {
    "ignore": [
      "node_modules/*",
      "spec/**/*.d.ts",
      "src/**/*.d.ts"
    ],
    "ext": "ts,json",
    "delay": "2500"
  },
  "esm": {
    "sourceMap": true
  }
}
